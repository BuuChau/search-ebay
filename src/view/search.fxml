<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="core.SearchController">
   <left>
      <ScrollPane fitToWidth="true" minHeight="-Infinity" pannable="true" pickOnBounds="false" prefHeight="400.0" prefWidth="200.0" vbarPolicy="ALWAYS" BorderPane.alignment="TOP_LEFT">
        <content>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefWidth="200.0">
               <children>
                   <Button layoutX="1.0" layoutY="0.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="190.0" fx:id="btCondition" onAction="#btConditionClicked" text="Tình Trạng" />
                   <Button layoutX="1.0" layoutY="30.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="190.0" fx:id="btPrice" onAction="#btPriceClicked" text="Giá" />
                   <Button layoutX="1.0" layoutY="60.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="210.0" fx:id="btLocation" onAction="#btLocationClicked" text="Địa điểm" />
                   <Button layoutX="1.0" layoutY="90.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="190.0" fx:id="btFeedBack" onAction="#btFeedBackClicked" text="FeedBack" />
                   <Button layoutX="1.0" layoutY="120.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="190.0" fx:id="btSold" onAction="#btSoldClicked" text="Sold" />
                   <Button layoutX="1.0" layoutY="150.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="190.0" fx:id="btDateFilt" onAction="#btDateFiltClicked" text="Số ngày lọc" />
               </children>
            </AnchorPane>
        </content>
      </ScrollPane>
   </left>
   <right>
      <Pane prefHeight="400.0" prefWidth="409.0" BorderPane.alignment="CENTER" fx:id="pane" />
   </right>
</BorderPane>
